                <Image x:ConnectionId='53'                              Width="60" Height="60"/>
                <TextBlock x:ConnectionId='54'                      FontSize="10" FontFamily="Aldrich" Foreground="White"  HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,10"/>
            </StackPanel>
        </DataTemplate>

        <!-- Button Styles -->
        <Style x:Key="MenuStyle" TargetType="ToggleButton">
            <Setter Property="CornerRadius" Value="10"/>
