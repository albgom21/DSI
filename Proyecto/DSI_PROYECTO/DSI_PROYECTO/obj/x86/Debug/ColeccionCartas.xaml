        <!--Texto cartas desbloqueadas-->
        <TextBlock x:Uid="NCartasDes" Text="CARTAS DESBLOQUEADAS 37/100" Grid.Row="0" Grid.Column="1"  TextWrapping="WrapWholeWords" FontSize="20" FontFamily="Aldrich" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="White"/>
        
        <!-- Dinero -->
        <StackPanel Orientation="Horizontal" Grid.Row="1" Grid.Column="2"  HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock x:ConnectionId='55' x:Name="dinero" Text="0" TextWrapping="WrapWholeWords" FontSize="20" FontFamily="Aldrich" Foreground="White" VerticalAlignment="Center" Margin="5,0"/>
            <Image Source="Assets/coin.png" VerticalAlignment="Center" Height="25" Width="25"/>
        </StackPanel>

        <!--Botones subditos, hechizos y crafteables-->
        <StackPanel Orientation="Horizontal" Grid.Row="1" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center">
            <ToggleButton x:ConnectionId='52'  x:Uid="subB" TabIndex="2"  x:Name="sbutton" Content="Súbditos" Style="{StaticResource SubStyle}"  Grid.Row="0" Grid.Column="0"  VerticalAlignment="Center"  Margin="20,0,20,0" Height="40" Width="115"                                                        >
                <ToggleButton.KeyboardAccelerators>
                    <KeyboardAccelerator Key="S" Modifiers="Control" />
                </ToggleButton.KeyboardAccelerators>
            </ToggleButton>

            <ToggleButton x:ConnectionId='53' x:Uid="hecB" TabIndex="3" x:Name="hbutton"  Content="Hechizos" Style="{StaticResource HecStyle}"  Grid.Row="0" Grid.Column="1"  VerticalAlignment="Center"   Margin="0,0,20,0" Height="40" Width="115"                                                        >
                <ToggleButton.KeyboardAccelerators>
                    <KeyboardAccelerator Key="H" Modifiers="Control" />
                </ToggleButton.KeyboardAccelerators>
            </ToggleButton>

            <ToggleButton x:ConnectionId='54' x:Name="cbutton" TabIndex="4" Content="Crafteables" Style="{StaticResource CraftStyle}"  Grid.Row="0" Grid.Column="2"  VerticalAlignment="Center" Margin="0,0,20,0" Height="40" Width="124"                                                        >
                <ToggleButton.KeyboardAccelerators>
                    <KeyboardAccelerator Key="C" Modifiers="Control" />
                </ToggleButton.KeyboardAccelerators>
            </ToggleButton>

        </StackPanel>

        <!--Fondo lista de cartas-->
        <Border Grid.Row="0" Grid.Column="0" Grid.RowSpan="4" FocusVisualPrimaryBrush="Black">
            <Border.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FFFFE3AE"/>
                    <GradientStop Color="#CCFFFFFF" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>
        </Border>

        <!--Boton guardar mazo-->
        <Button x:ConnectionId='48' x:Uid="GuardarM" TabIndex="8" Content="GUARDAR MAZO" Style="{StaticResource SaveStyle}"  Grid.Row="3" Grid.Column="0" Height="40" Width="200" VerticalAlignment="Center" HorizontalAlignment="Center"                   >
            <Button.KeyboardAccelerators>
                <KeyboardAccelerator Key="G" Modifiers="Control" />
            </Button.KeyboardAccelerators>
        </Button>

        <!--Nombre del mazo-->
        <TextBox x:ConnectionId='49' x:Name="MazoName" TabIndex="1" FontFamily="Aldrich" FontSize="20" Foreground="#FFCB9056"                                    HorizontalAlignment="Center" VerticalAlignment="Bottom" TextAlignment="Center"  SelectionHighlightColor="#FFBF7100" Width="220" Height="35"/>

        <!--Guardar mazo-->
        <TextBlock x:Uid="NCartas" Text="Número de cartas" Grid.Row="1" Grid.Column="0"  TextWrapping="WrapWholeWords" FontSize="16" FontFamily="Aldrich" HorizontalAlignment="Right" VerticalAlignment="Bottom" Foreground="#FFCB9056" Margin="0,0,10,0" SelectionHighlightColor="#FFBF7100"/>

        <!--ListView con las cartas del mazo-->
        <ListView x:ConnectionId='50' x:Name="cartasList" 
                  Grid.Row="2" Grid.Column="0"                 
                                                     
                  ItemTemplate="{StaticResource Cartas_Template}"     
                                                   IsItemClickEnabled="True"
                  TabIndex="7"
                 >
        </ListView>

        <!--Grid view con las cartas-->
        <GridView x:ConnectionId='51' x:Name="cartasGrid" 
                  Grid.Row="2" Grid.Column="1"       
                  HorizontalAlignment="Center"
                  VerticalAlignment="Center"
                  SelectionMode="Single"           
                                                    
                  ItemTemplate="{StaticResource Cartas_Grid_Template}"         
                                                   IsItemClickEnabled="True"
                  TabIndex="6"
                  IsFocusEngagementEnabled="True"
                 >
        </GridView>

    </Grid>
</Page>

