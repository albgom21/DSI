        <DataTemplate x:Key="Cartas_Template"
                      x:DataType="local:VMCartas">
            <Grid Height="40" Width="400" Margin="8">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="150"/>
                    <ColumnDefinition Width="50"/>

                </Grid.ColumnDefinitions>
                <TextBlock Text="{x:Bind Nombre}" FontSize="14" FontFamily="Aldrich" Grid.Column="0" VerticalAlignment="Center"/>
                <TextBlock Text="{x:Bind cantidad}" FontSize="14"  FontFamily="Aldrich" Grid.Column="1"  VerticalAlignment="Center" HorizontalAlignment="Right"/>

            </Grid>
        </DataTemplate>

        <DataTemplate x:Key="Cartas_Grid_Template"
                      x:DataType="local:VMCartas_Grid">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10">
                <Image Source="{x:Bind Img.Source}" Width="110" Height="110"/>
                <TextBlock Text="{x:Bind Name}" FontSize="14" FontFamily="Aldrich" Padding="7" Foreground="White"  HorizontalAlignment="Center" VerticalAlignment="Center"/>

