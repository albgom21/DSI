        <TextBlock Text="1000" Grid.Row="1" Grid.Column="2"  TextWrapping="WrapWholeWords" FontSize="20" FontFamily="Aldrich" HorizontalAlignment="Left" VerticalAlignment="Center" Foreground="White" Margin="0,0,0,0"/>

        <StackPanel Orientation="Horizontal" Grid.Row="1" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center">

            <ToggleButton  x:Name="sbutton" Content="Súbditos" Style="{StaticResource SubStyle}"  Grid.Row="0" Grid.Column="0"  VerticalAlignment="Center"  Margin="20,0,20,0" Height="40" Width="115" Checked="sbutton_Checked" Unchecked="sbutton_Unchecked"/>
            <ToggleButton  x:Name="hbutton"  Content="Hechizos" Style="{StaticResource HecStyle}"  Grid.Row="0" Grid.Column="1"  VerticalAlignment="Center"   Margin="0,0,20,0" Height="40" Width="115" Checked="hbutton_Checked" Unchecked="hbutton_Unchecked"/>
            <ToggleButton  x:Name="cbutton" Content="Crafteables" Style="{StaticResource CraftStyle}"  Grid.Row="0" Grid.Column="2"  VerticalAlignment="Center" Margin="0,0,20,0" Height="40" Width="124" Checked="cbutton_Checked" Unchecked="cbutton_Unchecked"/>

        </StackPanel>


        <Border Grid.Row="0" Grid.Column="0" Grid.RowSpan="4" FocusVisualPrimaryBrush="Black">
            <Border.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FFFFE3AE"/>
                    <GradientStop Color="#CCFFFFFF" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>
        </Border>
        <Button Content="GUARDAR MAZO" Style="{StaticResource SaveStyle}"  Grid.Row="3" Grid.Column="0" Height="40" Width="200" VerticalAlignment="Center" HorizontalAlignment="Center"/>

        <TextBox Text="NOMBRE_MAZO" FontFamily="Aldrich" FontSize="20" Foreground="#FFCB9056" HorizontalAlignment="Center" VerticalAlignment="Bottom" TextAlignment="Center"  SelectionHighlightColor="#FFBF7100" Width="220" Height="35"/>
        <TextBlock Text="Número de cartas" Grid.Row="1" Grid.Column="0"  TextWrapping="WrapWholeWords" FontSize="16" FontFamily="Aldrich" HorizontalAlignment="Right" VerticalAlignment="Bottom" Foreground="#FFCB9056" Margin="0,0,10,0" SelectionHighlightColor="#FFBF7100"/>

        <ListView x:Name="cartasList" 
                  Grid.Row="2" Grid.Column="0"                 
                  ItemsSource= "{x:Bind ListaCartas}"
                  ItemTemplate="{StaticResource Cartas_Template}"     
                  ItemClick="cartasList_ItemClick" IsItemClickEnabled="True"
                 >
        </ListView>

        <GridView x:Name="cartasGrid" 
                  Grid.Row="2" Grid.Column="1"       
                  HorizontalAlignment="Center"
                  VerticalAlignment="Center"
                  SelectionMode="Single"           
                  ItemsSource= "{x:Bind GridCartas}"
                  ItemTemplate="{StaticResource Cartas_Grid_Template}"         
                  ItemClick="cartasGrid_ItemClick" IsItemClickEnabled="True"
                 >
        </GridView>
    </Grid>
</Page>
